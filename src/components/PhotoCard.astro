---
import { getCloudinaryUrl } from '../utils/config';
import type { Photo } from '../types';

interface Props {
  photo: Photo;
  category: string;
  showLightbox?: boolean;
}

const { photo, category, showLightbox = true } = Astro.props;

const thumbnailUrl = getCloudinaryUrl(photo.cloudinary_id, {
  width: 600,
  quality: 'auto',
  format: 'auto',
});

const fullUrl = getCloudinaryUrl(photo.cloudinary_id, {
  width: 1600,
  quality: 'auto',
  format: 'auto',
});

const href = showLightbox ? '#' : `/${category}/${photo.slug}/`;
---

<div
  class="photo-card"
  data-lightbox={showLightbox ? 'true' : undefined}
  data-full-url={fullUrl}
  data-title={photo.title}
  data-description={photo.description}
  data-species={photo.species || ''}
  data-location={photo.location || ''}
  data-href={`/${category}/${photo.slug}/`}
  data-filter={photo.filters?.length ? photo.filters.join(',') : 'none'}
>
  <a href={href} class="photo-link">
    <img
      src={thumbnailUrl}
      alt={photo.title}
      loading="lazy"
      width={photo.width}
      height={photo.height}
    />
  </a>
  <div class="photo-title-bar">
    <a href={`/${category}/${photo.slug}/`} class="photo-title">{photo.title}</a>
  </div>
</div>

<style>
  .photo-card {
    position: relative;
    break-inside: avoid;
    margin-bottom: 1.25rem;
  }

  .photo-link {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 4px;
  }

  .photo-link img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .photo-link:hover img {
    transform: scale(1.03);
  }

  .photo-title-bar {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 0.75rem 0.85rem;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.75) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    opacity: 0;
    transform: translateY(6px);
    transition: opacity 0.2s ease, transform 0.2s ease;
    pointer-events: none;
    border-radius: 0 0 4px 4px;
  }

  .photo-card:hover .photo-title-bar,
  .photo-card:focus-within .photo-title-bar {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .photo-title {
    color: white;
    font-size: 0.85rem;
    font-weight: 500;
    line-height: 1.3;
    text-decoration: none;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .photo-title:hover {
    color: #93c5fd;
  }
</style>
