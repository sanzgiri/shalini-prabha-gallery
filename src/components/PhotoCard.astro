---
import { getCloudinaryUrl } from '../utils/config';
import type { Photo } from '../types';

interface Props {
  photo: Photo;
  category: string;
  showLightbox?: boolean;
}

const { photo, category, showLightbox = true } = Astro.props;

const thumbnailUrl = getCloudinaryUrl(photo.cloudinary_id, {
  width: 600,
  quality: 'auto',
  format: 'auto',
});

const fullUrl = getCloudinaryUrl(photo.cloudinary_id, {
  width: 1600,
  quality: 'auto',
  format: 'auto',
});

const href = showLightbox ? '#' : `/${category}/${photo.slug}/`;
---

<div
  class="photo-card"
  data-lightbox={showLightbox ? 'true' : undefined}
  data-full-url={fullUrl}
  data-title={photo.title}
  data-description={photo.description}
  data-species={photo.species || ''}
  data-location={photo.location || ''}
  data-href={`/${category}/${photo.slug}/`}
  data-filter={photo.filters?.length ? photo.filters.join(',') : 'none'}
>
  <a href={href} class="photo-link">
    <img
      src={thumbnailUrl}
      alt={photo.title}
      loading="lazy"
      width={photo.width}
      height={photo.height}
    />
  </a>
  <div class="photo-info">
    <a href={`/${category}/${photo.slug}/`} class="photo-title-link">
      {photo.title}
    </a>
  </div>
</div>

<style>
  .photo-card {
    break-inside: avoid;
    margin-bottom: 1.5rem;
  }

  .photo-link {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 4px;
  }

  .photo-link img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .photo-link:hover img {
    transform: scale(1.03);
  }

  .photo-info {
    padding: 0.5rem 0.25rem;
  }

  .photo-title-link {
    color: var(--color-text, #333);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    line-height: 1.3;
    display: block;
  }

  .photo-title-link:hover {
    color: var(--color-primary, #2563eb);
  }
</style>
